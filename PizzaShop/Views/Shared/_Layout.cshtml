<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="HTML5,CSS3,HTML,Template,multi-page,Restant - Takeway & Restaurant HTML Template">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="@Url.Content("~/assets/css/bootstrap.min.css")">
    <!-- Meanmenu CSS -->
    <link rel="stylesheet" href="@Url.Content("~/assets/css/meanmenu.css")" />
    <!-- Boxicons CSS -->
    <link rel="stylesheet" href="@Url.Content("~/assets/css/boxicons.min.css")" />
    <!-- Owl Carousel -->
    <link rel="stylesheet" href="@Url.Content("~/assets/css/owl.carousel.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/assets/css/owl.theme.default.min.css")" />
    <!-- Slick Slider CSS -->
    <link rel="stylesheet" href="@Url.Content("~/assets/css/slick.css")" />
    <link rel="stylesheet" href="@Url.Content("~/assets/css/slick-theme.css")" />
    <!-- Magnific Popup CSS -->
    <link rel="stylesheet" href="@Url.Content("~/assets/css/magnific-popup.css")" />
    <!-- Style CSS -->
    <link rel="stylesheet" href="@Url.Content("~/assets/css/style.css")" />
    <!-- Responsive CSS -->
    <link rel="stylesheet" href="@Url.Content("~/assets/css/responsive.css")" />

    <title></title>

    <link rel="icon" type="image/png" href="@Url.Content("~/assets/img/favicon.png")" />
</head>

<body>
    <!-- Preloader -->
    <div class="loader">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="spinner"></div>
            </div>
        </div>
    </div>
    <!-- End Preloader -->
    <!-- Start Navbar Area -->
    <div class="navbar-area fixed-top">
        <!-- Menu For Mobile Device -->
        <div class="mobile-nav">
            <a href="index.html" class="logo">
                <img src="@Url.Content("~/assets/img/logo-two.png")" />
            </a>
        </div>

        <!-- Menu For Desktop Device -->
        <div class="main-nav">
            <div class="container">
                <nav class="navbar navbar-expand-md navbar-light">
                    <a class="navbar-brand" href="index.html">
                        <img src="@Url.Content("~/assets/img/logo.png" )" />
                    </a>
                    <div class="collapse navbar-collapse mean-menu" id="navbarSupportedContent">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a asp-action="Menu" asp-controller="Home" class="nav-link dropdown-toggle active">Menu <i class='bx bx-chevron-down'></i></a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a asp-action="Menu" asp-controller="Home" class="nav-link">Pizza</a>
                                    </li>

                                </ul>
                            </li>

                            <partial name="_LoginPartial" />

                            <li class="nav-item">
                                <a asp-action="privacy" asp-controller="home" class="nav-link">Contact Us</a>
                            </li>
                        </ul>
                    </div>
                    <div class="side-nav">
                        <a class="nav-cart" asp-action="ShowCart" asp-controller="Orders">
                            <i class='bx bxs-cart'></i>

                        </a>
                        <a class="nav-tel" href="tel:+989164890208">
                            <i class='bx bxs-phone-call'></i>
                            +98-9164890208
                        </a>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <!-- End Navbar Area -->
    <!-- Bannner -->
    <div class="banner-area-three">

        <div class="container">

            <div class="banner-content">

                <div>
                    @RenderBody()
                </div>

            </div>

        </div>
    </div>
    <!-- End Bannner -->
    <!-- Copyright -->
    <div class="copyright-area">
        <div class="container">
            <div class="copyright-item">
                <p> All Rights Reserved ©</a></p>
            </div>
        </div>
    </div>
    <!-- End Copyright -->
    <!-- Essential JS -->
    <script src="@Url.Content("~/assets/js/jquery-3.5.0.min.js")"></script>
    <script src="@Url.Content("~/assets/js/popper.min.js")"></script>
    <script src="@Url.Content("~/assets/js/bootstrap.min.js")"></script>
    <!-- Meanmenu JS -->
    <script src="@Url.Content("~/assets/js/jquery.meanmenu.js")"></script>
    <!-- Owl Carousel JS -->
    <script src="@Url.Content("~/assets/js/owl.carousel.min.js")"></script>
    <!-- Mixitup JS -->
    <script src="@Url.Content("~/assets/js/jquery.mixitup.min.js")"></script>
    <!-- Slick Slider JS -->
    <script src="@Url.Content("~/assets/js/slick.min.js")"></script>
    <!-- Form Ajaxchimp JS -->
    <script src="@Url.Content("~/assets/js/jquery.ajaxchimp.min.js")"></script>
    <!-- Form Validator JS -->
    <script src="@Url.Content("~/assets/js/form-validator.min.js")"></script>
    <!-- Contact JS -->
    <script src="@Url.Content("~/assets/js/contact-form-script.js")"></script>
    <!-- Magnific Popup JS -->
    <script src="@Url.Content("~/assets/js/jquery.magnific-popup.min.js")"></script>
    <!-- Custom JS -->
    <script src="@Url.Content("~/assets/js/custom.js")"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>